<h1>Full list of movies!</h1>

<%= link_to 'New Movie', new_movie_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>Year Released</th>
	</tr>

	<% @movies.each do |movie| %>
		<tr>
			<td><%= movie.title %></td>
			<td><%= movie.description%></td>
			<td><%= movie.year_released%></td>
		</tr>
	<% end %>
</table>
