<h1>Full list of movies!</h1>

<%= link_to 'New Movie', new_movie_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>Year Released</th>
		<th colspan="4"></th>
	</tr>

	<% @movies.each do |movie| %>
		<tr>
			<td><%= movie.title %></td>
			<td><%= movie.description%></td>
			<td><%= movie.year_released%></td>
			<td><%= link_to 'Show', movie_path(movie) %></td>
			<td><%= link_to 'Edit', edit_movie_path(movie) %></td>
			<td><%= link_to 'Destroy', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
